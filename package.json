    "debug": "~2.2.0",
    "dotenv": "^4.0.0",
    "express": "~4.13.1",
    "lodash": "^3.10.1",
    "mongoose": "^4.13.9",
    "morgan": "~1.6.1",
    "ts-node": "^0.7.1",
    "typescript": "^2.4.1",
    "typings": "^1.0.5"
